autoload -U compinit
compinit

#allow tab completion in the middle of a word
setopt COMPLETE_IN_WORD

# case insensitive completion
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'

## keep background processes at full speed
#setopt NOBGNICE
## restart running processes on exit
#setopt HUP

## history
#setopt APPEND_HISTORY
## for sharing history between zsh processes
#setopt INC_APPEND_HISTORY
#setopt SHARE_HISTORY

## never ever beep ever
#setopt NO_BEEP

## automatically decide when to page a list of completions
#LISTMAX=0

## disable mail checking
#MAILCHECK=0

# autoload -U colors
#colors

# bling
source ~/.config/zsh/bling.sh

# starship
eval "$(starship init zsh)"

# bluebuild
eval "$(bluebuild completions zsh)"

# pipx
eval "$(register-python-argcomplete pipx)"

# aliases
alias reload='systemctl --user daemon-reload'
alias wall-set='~/.config/hypr/scripts/wall-set.sh'

# image downloader
gallery-dl () {
    podman run \
    --interactive \
    --rm \
    --tty \
    --volume ~/Containers/Gallery-dl:/etc/gallery-dl:z \
    --volume ~/Containers/Gallery-dl/gallery-dl.conf:/etc/gallery-dl.conf:z \
    ghcr.io/mikf/gallery-dl:latest \
    "$@"
}
